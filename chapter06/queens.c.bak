#include <stdio.h>
#include <stdlib.h>

/* Максимален размер на дъската */
#define MAXN 100

/* Размер на дъската */
const unsigned n = 13;

unsigned row[MAXN], RD[2 * (MAXN + 1) - 1],
         LD[2 * (MAXN + 1) - 1], queens[MAXN];

/* Отпечатва намереното разположение на цариците */
void printBoard(void)
{ unsigned i, j;
  for (i = 0; i < n; i++) {
   printf("\n");
   for (j = 1; j <= n; j++)
     if (queens[i] == j) printf("x ");
       else printf(". ");
  }
  printf("\n");
  exit(0);
}

/* Намира следваща позиция за поставяне на царица */
void generate(unsigned i)
{ unsigned k;
  for (k = 1; k <= n; k++) {
    if (row[k-1] && RD[i + k] && LD[n + i - k]) {
      row[k-1] = 0; RD[i + k] = 0; LD[n + i - k] = 0; queens[i] = k;
      if (i == n-1) printBoard();
      generate(i + 1);
      row[k-1] = 1; RD[i + k] = 1; LD[n + i - k] = 1;
    }
  }
}

int main(void) {
  unsigned i;
  for (i = 0; i < n; i++) row[i] = 1;
  for (i = 1; i < 2*n; i++) RD[i] = 1;
  for (i = 0; i < 2*n; i++) LD[i] = 1;
  generate(0);
  printf("Задачата няма решение! \n");
  return 0;
}
